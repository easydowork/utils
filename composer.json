{
    "name": "simple-swoole/utils",
    "description": "A utils component for simps.",
    "type": "library",
    "license": "Apache-2.0",
    "keywords": [
        "php",
        "simps",
        "swoole",
        "utils"
    ],
    "authors": [
        {
            "name": "Lu Fei",
            "email": "lufei@simps.io"
        }
    ],
    "require": {
        "php": ">=7.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.9"
    },
    "autoload": {
        "psr-4": {
            "Simps\\Utils\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix $1"
    }
}
